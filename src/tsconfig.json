{
  "compilerOptions": {
    "outDir": "../dist/server",
    "rootDir": "./",
    "target": "es2018",
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["./**/*"]
}
