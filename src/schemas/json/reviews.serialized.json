{
  "$schema": "http://json-schema.org/schema",
  "$id": "src/schemas/json/reviews.serialized.json",
  "type": "object",
  "properties": {
    "id": {
      "type": "number"
    },
    "comment": {
      "type": ["string", "null"]
    },
    "comparison": {
      "type": ["string", "null"],
      "enum": ["worse", "similar", "better"]
    },
    "reviewedSubmissionId": {
      "type": "number"
    },
    "reviewerSubmissionId": {
      "type": "number"
    }
  },
  "additionalProperties": false,
  "required": ["id", "comment", "comparison", "reviewedSubmissionId", "reviewerSubmissionId"]
}
